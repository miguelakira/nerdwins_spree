<div id = 'columns'>
    <div id="wrapper" data-hook>
      <div id="rightcol">
        <div class="box ads">
        <div class="wtitle">
          <h2>Novidades</h2>
        </div>
      <% if content_for?(:sidebar) %>
        <div id="sidebar" data-hook>
          <%= yield :sidebar %>
        </div>
      <% end %>
      </div>
      </div>
      <div id = 'centercol'>
      
        <%= breadcrumbs(@taxon) %>
        <%= flash_messages %>
        <%= yield %>
      
      </div>
    </div>
  </div>
    <div id="footer" data-hook>
